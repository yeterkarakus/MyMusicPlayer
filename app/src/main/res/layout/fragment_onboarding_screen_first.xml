<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/firstOnboardingImg"
        android:layout_width="@dimen/onboarding_scr_image_width"
        android:layout_height="@dimen/onboarding_scr_image_height"
        android:layout_gravity="center"
        android:background="@drawable/onboarding_img_1"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/firstSlideTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_gravity="center"
        android:padding="16dp"
        android:text="@string/first_slide_title"
        android:textAlignment="center"
        android:textAppearance="@style/onboarding_title" />

    <TextView
        android:id="@+id/firstSlideDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_gravity="center"
        android:padding="16dp"
        android:text="@string/first_slide_desc"
        android:textAlignment="center"
        android:textAppearance="@style/onboarding_body" />

</LinearLayout>